<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ReadOnline" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_accent</item>
        <item name="colorPrimaryVariant">@color/blue_accent_dark</item>
        <item name="colorSecondary">@color/green_accent</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="materialButtonStyle">@style/Widget.ReadOnline.Button</item>
        <item name="materialCardViewStyle">@style/Widget.ReadOnline.Card</item>

    </style>

    <style name="Text.Hl6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text.Sub1" parent="TextAppearance.MaterialComponents.Subtitle1"/>
    <style name="Text.Body1" parent="TextAppearance.MaterialComponents.Body1"/>

    <style name="Widget.ReadOnline.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="Widget.ReadOnline.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">14dp</item>
    </style>

    <style name="Theme.ReadOnline.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.ReadOnline</item>
    </style>


</resources>
